import os
import getpass
id = input('아이디를 입력하세요')
os.system('clear')
password = getpass.getpass('비밀번호를 입력하세요')
os.system('clear')
dic1 = {id:password}
i1 = 1
i2 = 1
while i1:
    while i2:
        input1 = input('아이디')
        if input1 in dic1:
            i2 = 0
    input2 = getpass.getpass('비밀번호')
    if input2 == dic1[input1]:
        i1 = 0
os.system('clear')
